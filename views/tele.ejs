<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ship telemetry</title>
    <link rel="stylesheet" href="/stylesheets/tele_style.css">
    <meta http-equiv="refresh" content="60">
</head>
<body>
    <div class="column">
        <div class="col">
            <% for(let i = 0; i < 11; i++) { %>
                <p class=<%= (errNums.includes(i+1)?"warning":"safe") %>><%= data[i].name %>:</p>
            <% } %>
        </div>
        <div class="col">
            <% for(let i = 0; i < 11; i++) { %>
                <p class=<%= (errNums.includes(i+1)?"warning":"safe") %>><%= data[i].value %></p>
            <% } %>
        </div>
    </div>
    <div class="column">
        <div class="col">
            <% for(let i = 11; i < 23; i++) { %>
                <p class=<%= (errNums.includes(i+1)?"warning":"safe") %>><%= data[i].name %>:</p>
            <% } %>
        </div>
        <div class="col">
            <% for(let i = 11; i < 23; i++) { %>
                <p class=<%= (errNums.includes(i+1)?"warning":"safe") %>><%= data[i].value %></p>
            <% } %>
        </div>
    </div>
    <div class="column">
        <div class="wrapper <%= (errNums.length==0?"hide":"") %>">
            <form action="/tele" method="post" id="malfunction" autocomplete="off">
                <h3>Malfunction detected!</h3>
                <input type="text" name="command" placeholder="Enter the command to fix it">
                <div><button>Send</button></div>
                <div class="row">
                    <!-- time remaining -->
                    <span>05:15</span>
                    <span>Incorrect!</span>
                </div>
            </form>
        </div>
        <img src="/images/em_logo.png" alt="expedice mars logo">
    </div>
</body>
</html>